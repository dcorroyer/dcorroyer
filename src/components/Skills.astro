---
const skillCategories = [
  {
    title: 'Backend',
    skills: [
      { name: 'Symfony', icon: 'https://cdn.worldvectorlogo.com/logos/symfony.svg' },
      { 
        name: 'API Platform', 
        icon: '/images/apiplatform.png' 
      },
    ],
  },
  {
    title: 'Frontend',
    skills: [
      { name: 'Tailwind', icon: 'https://cdn.worldvectorlogo.com/logos/tailwindcss.svg' },
      { name: 'Vue', icon: 'https://cdn.worldvectorlogo.com/logos/vue-9.svg' },
      { name: 'Nuxt', icon: 'https://cdn.worldvectorlogo.com/logos/nuxt-2.svg' },
      { name: 'React', icon: 'https://cdn.worldvectorlogo.com/logos/react-2.svg' },
      { name: 'Astro', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/astro/astro-original.svg' },
    ],
  },
  {
    title: 'Databases',
    skills: [
      { name: 'MariaDB', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/mysql/mysql-original.svg' },
      { name: 'PostgreSQL', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/postgresql/postgresql-original.svg' },
      { name: 'MongoDB', icon: 'https://cdn.worldvectorlogo.com/logos/mongodb-icon-1.svg' },
    ],
  },
  {
    title: 'Infrastructure',
    skills: [
      { name: 'Docker', icon: 'https://cdn.worldvectorlogo.com/logos/docker.svg' },
    ],
  },
];
---

<section id="skills" class="py-20">
  <div class="text-center mb-12">
    <h2 class="text-4xl font-bold mb-4">
      <span class="text-primary">Here</span>
      <span class="text-gray-900 dark:text-white font-normal opacity-70"> are my skills</span>
    </h2>
  </div>

  <div class="max-w-3xl mx-auto space-y-12">
    {skillCategories.map((category) => (
      <div>
        <h3 class="text-xl font-semibold text-primary mb-6 text-center">{category.title}</h3>
        <div class="flex justify-center gap-4">
          {category.skills.map((skill) => (
            <div class="flex flex-col items-center group">
              <div class="w-14 h-14 flex items-center justify-center p-2.5 rounded-lg bg-white dark:bg-gray-800 shadow-sm group-hover:shadow-md transition-all duration-300">
                <img 
                  src={skill.icon} 
                  alt={skill.name} 
                  class="w-full h-full object-contain"
                />
              </div>
              <span class="mt-1 text-sm text-gray-700 dark:text-gray-300 group-hover:text-primary dark:group-hover:text-primary transition-colors">
                {skill.name}
              </span>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>